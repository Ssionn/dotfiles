{
  "hover.floatConfig": {
    "highlight": "CocFloating",
    "rounded": true
  },
  "suggest.floatConfig": {
    "highlight": "CocPmenu",
    "borderhighlight": "CocPmenuSel",
    "winblend": 0,
    "rounded": true
  },
  "diagnostic.floatConfig": {
    "highlight": "CocErrorFloat",
    "borderhighlight": "CocErrorMsg",
